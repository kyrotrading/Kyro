{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install --prefix server && npm run build --prefix server"
  },
  "deploy": {
    "startCommand": "npm start --prefix server",
    "healthcheckPath": "/health",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
